<UserControl x:Class="InitialProject.WPF.View.TourStatisticsGuest2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.View"
        mc:Ignorable="d"
        Width="706" Height="472">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="117*"/>
        </Grid.RowDefinitions>
        <ComboBox Foreground="DarkBlue" Margin="332,194,239,115" Grid.RowSpan="2" Grid.Row="1"/>
        <Label FontWeight="Bold" Foreground="DarkBlue" Content="For selected location..." Margin="332,172,199,10" Grid.Row="1"/>
        <Label FontWeight="Bold" Foreground="DarkBlue" Content="For selected language..." Margin="34,172,502,10" Grid.Row="1" />
        <ComboBox Foreground="DarkBlue" Margin="34,194,541,115" Grid.Row="1" Grid.RowSpan="2"/>
        <Label FontWeight="Bold" Foreground="DarkBlue" Content="In general..." Margin="27,15,566,161" Grid.Row="1"/>
        <Label FontWeight="Bold" Foreground="DarkBlue" Content="For selected year..." Margin="332,121,239,195" Grid.RowSpan="2"/>
        <Label FontWeight="Bold" Foreground="DarkBlue" Content="Select guide: " Margin="27,29,587,84"/>
        <ComboBox Margin="342,10,282,178" Grid.Row="1" >

        </ComboBox>
        <ComboBox Margin="110,29,502,87"/>
        <Label FontWeight="Bold" Foreground="DarkBlue" Content="For selected year..." Margin="332,62,225,29" Grid.Row="2" />
        <ComboBox Margin="332,86,225,10" SelectedIndex="0" SelectedItem="{Binding SelectedYear, Mode=TwoWay}" ItemsSource="{Binding Years}" Grid.Row="2">For selected year...</ComboBox>
        <GroupBox Header="Number of requests" Margin="0,53,42,106" BorderBrush="DarkBlue" Foreground="DarkBlue" Grid.Row="1" Grid.RowSpan="2">

        </GroupBox>


        <GroupBox Header="Average number of guests in ACCEPTED requests" Margin="0,22,42,0" BorderBrush="DarkBlue" Foreground="DarkBlue" Grid.Row="2">
            <StatusBar Background="Transparent" Margin="10,0,0,0">
                <Label FontWeight="Bold" Foreground="DarkBlue" Height="27" Width="80" Margin="54,0,515,10">In general:</Label>
                <TextBlock Text="{Binding TopGuestNum}" Margin="-500,15,500,100" Width="80" Height="30"></TextBlock>
                <TextBlock Text="{Binding TopYearGuestNum}" Margin="-180,10,500,15" Width="80" Height="30"></TextBlock>

            </StatusBar>
        </GroupBox>

        <GroupBox Header="Percentage of accepted and rejacted SIMPLE requests" Margin="0,0,42,161" BorderBrush="DarkBlue" Foreground="DarkBlue" Grid.Row="0" Grid.RowSpan="2" Height="188" VerticalAlignment="Bottom">

        </GroupBox>
    </Grid>
</UserControl>
