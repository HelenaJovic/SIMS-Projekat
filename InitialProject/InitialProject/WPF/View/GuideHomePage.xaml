<Page x:Class="InitialProject.WPF.View.GuideHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.View"
        mc:Ignorable="d"
        Title="GuideHomePage" Height="592" Width="430">
    <Page.Background>
        <ImageBrush ImageSource="../../Resources/Images/zutozeleno.png" Stretch="UniformToFill"></ImageBrush>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition> 
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="../../Resources/Images/wallpaper2.jpg" Stretch="UniformToFill" ></Image>
        <Border HorizontalAlignment="Center" Height="80" Width="240" CornerRadius="30" Background="#b3ffb3"  Opacity="0.8" Margin="0 20 0 0">
            <Grid>
                <Grid.Effect>
                    <DropShadowEffect Color="#FF000000" ShadowDepth="0" BlurRadius="10" Opacity="0.5" />
                </Grid.Effect>
                <Label Margin="19 20 20 0" Content="HOME PAGE" HorizontalAlignment="Center" FontSize="32" FontWeight="Bold">
                    <Label.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="#FF9EE2FF" />
                            <GradientStop Offset="1" Color="#FF006DE5" />
                        </LinearGradientBrush>
                    </Label.Foreground>
                    <Label.Effect>
                        <DropShadowEffect Color="#FF000000" ShadowDepth="2" BlurRadius="5" Opacity="0.7" />
                    </Label.Effect>
                </Label>
            </Grid>
        </Border>
        <!--Label  Grid.Row="1" Content="About us" FontSize="24" FontWeight="Bold"></Label>
        <Border Grid.Row="2"   CornerRadius="20">
        <TextBlock Margin="8" FontSize="16"><Run Text="Our application allows you to plan, create and track your "/><LineBreak/><Run Text="tours in the best possible way. In case you need help"/><LineBreak/><Run Text="finding your way around, feel free to start the demo"/><LineBreak/><Run Text="mode bellow."/></TextBlock>
        </Border>
        <Button Grid.Row="3" Background="#fffd81" FontSize="15" Content="DEMO" HorizontalAlignment="Center" Height="40" Width="100"></Button-->
        
        <GroupBox Grid.Row="1" Header="General statistics" FontSize="24" FontWeight="Bold" Margin="0 10 0 10" Background="#b3ffb3" Width="400">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Margin="0 15 0 0" HorizontalAlignment="Left" FontSize="17">Top tour:</Label>
                    <Label HorizontalAlignment="Left" FontSize="17">Num of upcoming tours:</Label>
                    <Label HorizontalAlignment="Left" FontSize="17" FontWeight="Bold">Your avarage grade:</Label>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="0 10 0 0">
                    <StackPanel  Orientation="Horizontal">
                        <Label Margin="0 5 0 0"  FontSize="17" FontWeight="Normal" Content="{Binding TopTour.Name}" />
                        <Button ToolTip="See more about top tours" Margin="3 0 0 0"  Background="Transparent" BorderBrush="Transparent" Width="50" Height="35" Command="{Binding TopCommand}">
                            <WrapPanel >
                                <Image Height="25" Source="../../Resources/Images/first.png"></Image>
                                <!--TextBlock Margin="0 5 0 0" FontSize="11">see more</TextBlock-->
                            </WrapPanel>
                        </Button>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Left" FontSize="17" FontWeight="Normal" Content="{Binding NumOfUpcomingTours}" />
                        <Button ToolTip="See more about upcoming tours" Margin="3 0 0 0"  Background="Transparent" BorderBrush="Transparent" Width="50" Height="35" Command="{Binding UpcomingCommand}">
                            <WrapPanel >
                                <Image Height="25" Source="../../Resources/Images/upcoming.png"></Image>
                                <!--TextBlock Margin="0 5 0 0" FontSize="11">see more</TextBlock-->
                            </WrapPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal">
                        <Label HorizontalAlignment="Left" FontSize="17" FontWeight="Normal" Content="{Binding AvarageGrade}" />
                        <Button ToolTip="See more ratings" Margin="3 0 0 0"  Background="Transparent" BorderBrush="Transparent" Width="50" Height="35" Command="{Binding AllRatingsCommand}">
                            <WrapPanel >
                                <Image Height="25" Source="../../Resources/Images/grade2.png"></Image>
                                <!--TextBlock Margin="0 5 0 0" FontSize="11">see more</TextBlock-->
                            </WrapPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>
        <StackPanel Margin="15 0 0 0" Orientation="Horizontal" Grid.Row="2">
            
            
            
        </StackPanel>
        <Button Grid.Row="2" Background="#fffd81" FontSize="15" Height="40" Width="100" Command="{Binding LogOutCommand}" Content="Log out" HorizontalAlignment="Right" Margin="0 0 25 0"></Button>
        <Label Grid.Row="3" Content="Hajduk Veljkova 5, Novi Sad   |   021568136" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontWeight="Bold"></Label>
    </Grid>
</Page>
